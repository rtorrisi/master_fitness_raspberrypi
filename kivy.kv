#:kivy 1.11.1

<ViewerScreen>:
	canvas.before:
		Rectangle:	
			pos: self.pos
			size: self.size
			source: 'app_data/background.jpg'

	BoxLayout:
		orientation: 'horizontal'
		StackLayout:
			id: left_panel
			canvas.before:
				Color:
					rgba: 0,0,0,0.5
				Rectangle:
					size: self.size
					pos: self.pos

			size_hint: (0.2, 1)
			padding: 15
			orientation: 'tb-lr'
			Image:
				size_hint: (1, None)
				height: 200
				source: 'app_data/master_fitness_logo_w_noaddr.png'
			
			Label:
				text: 'Scheda di Allenamento'
				text_size: self.size
				font_size: 25
				size_hint: (1, None)
				height: 50
				halign: 'center'

			Label:
				text: 'Riccardo Torrisi'
				text_size: self.size
				font_size: 20
				size_hint: (1, None)
				height: 50
				halign: 'center'
			
			Widget:
				size_hint: (1, 0.65)		
	
			Button:
				id: exit_btn
				size_hint: (1, None)
				height: 50
				background_normal: ''
				background_color: .04, .85, .9, 1
				text: 'Chiudi'
				on_press: self.background_color = (.05, 0.86, .91, 1)
				on_release: self.background_color = (.04, .85, .9, 1)
			

		FloatLayout:
			size_hint: (0.8, 1)
			Scatter:
				scale: 2.5	
				scale: 1
				do_scale: False
				do_rotation: False
				do_translation_x : False
				pos: root.center_x - 535, root.center_y - 1550
				pos: root.center_x, root.center_y
				size_hint: (None, None)
				size: img_view.size

				Image:
					id: img_view
					size_hint: (None, None)
					size: 582, 823
					source: root.src
		

<HomeScreen>:
	canvas.before:
		#Color:
			#rgb: 0,0,0
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'app_data/background.jpg'
	BoxLayout:
		
		orientation: 'vertical'
		Image:
			source: 'app_data/master_fitness_logo_w.png'
			size_hint: (1, 0.8)
	
		AnchorLayout:
			anchor_y: 'top'
			size_hint: (1, 0.2)
			ProgressBar:
				value: root.progress_bar_value
				size_hint: (0.8, None)
				opacity: 1 if root.progress_bar_visibility else 0
